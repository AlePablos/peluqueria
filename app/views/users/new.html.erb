<div class="page centered-form">

      <h1>Registrate</h1>

      <%= form_for(@user) do |f| %>

        <!-- Veo si hay errores -->
        <% if @user.errors.any? %>
          <div class="error_explanation">
            <label class="errores">
              <%= pluralize(@user.errors.count, "error") %><br>
              No se pudo registrar, hay errores en los campos, por favor reviselos:
            </label>
            <ul>
              <%@user.errors.messages.values.each do |msg| %>
                <%msg.each do  |m| %>
                  <li><%= m %></li>
                <%end %>
              <% end %>
            </ul>
          </div>
        <% end %>

        <label>Nombre *</label>
        <%= f.text_field :first_name, :placeholder => "Nombre" %>
        <label>Apellido *</label>
        <%= f.text_field :last_name, :placeholder => "Apellido" %>
        <label>Telefono *</label>
        <%= f.text_field :phone, :placeholder => "Telefono" %>
        <label>Sexo</label>
        <%= f.select :sex, User.sexes.keys.to_a, include_blank: false %>
        <label>Email *</label>
        <%= f.email_field :email, :placeholder => "Email" %>
        <label>Contraseña *</label>
        <%= f.password_field :password, :placeholder => "Contraseña" %>

        <label class="boton">  <%= f.submit "Crear cuenta", class: "btn-submit" %></label>
      <% end %>
      <label class="referencia">Todos los campos son obligatorios</label>
</div>
