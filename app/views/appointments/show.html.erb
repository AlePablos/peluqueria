<div class="page">
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Turno</strong>
    <%= appointment_format_time(@appointment.start_time) %> - <%= appointment_format_time(@appointment.end_time) %>
  </p>

  <% if current_user.admin? %>
    <p>
      <strong>Cliente</strong>
      <%= @appointment.user.full_name %>
    </p>
  <% end %>

  <h2>Servicios</h2>
  <% @appointment.work_items.each do |work_item| %>
    <%= render 'work_item', work_item: work_item %>
  <% end %>

  <%= link_to 'Edit', edit_appointment_path(@appointment) %> |
  <%= link_to 'Back', appointments_path %>
</div>
